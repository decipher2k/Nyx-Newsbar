<Window x:Class="Nyx_Appbar.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Nyx_Appbar"
        mc:Ignorable="d"
        Title="MainWindow" Height="0" Width="0" Loaded="Window_Loaded" ShowInTaskbar="False">
    <Window.Resources>
        <ContextMenu Name="ContextMenu" x:Key="cmButton">
            <MenuItem Header="Settings" Name="Settings" Click="Settings_Click"/>
            <MenuItem Header="Close" Name="Close" Click="Close_Click"/>
        </ContextMenu>
    </Window.Resources>
    <Grid x:Name="grid">
        
    </Grid>
</Window>
